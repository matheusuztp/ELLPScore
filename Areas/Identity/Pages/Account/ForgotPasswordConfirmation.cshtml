@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Recuperação de Senha Solicitada";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="login-container">
    <div class="login-right">
        <h2>Verifique Seu E-mail</h2>
        <p>Se um e-mail estiver associado à sua conta, você receberá uma mensagem com instruções para redefinir sua senha.</p>
        <a href="/Identity/Account/Login" class="btn btn-primary">Voltar ao Login</a>
    </div>
</div>
