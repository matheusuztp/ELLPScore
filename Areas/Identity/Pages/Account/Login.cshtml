@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="login-container">
    <div class="login-left">
        <img src="~/images/user-icon.png" alt="User Icon" class="user-icon" />
        <h2>Login</h2>
    </div>
    <div class="login-right">
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Email">Usuário</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="/Identity/Account/ForgotPassword" class="forgot-password-link">Esqueci minha senha</a>
            </div>
            <div class="form-actions">
                <a href="/Identity/Account/Register" class="btn btn-secondary">Cadastrar</a>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </form>
    </div>
</div>