@page
@model IndexModel
@{
    ViewBag.Title = "Resumo";
    Layout = "~/Pages/Shared/_LayoutLogado.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Resumo de Informações</h2>

    <div class="row">
        <div class="col-sm-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total de Alunos</h5>
                    <p class="card-text display-5">@Model.TotalAlunos</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total de Notas</h5>
                    <p class="card-text display-5">@Model.TotalNotas</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total de Feedbacks</h5>
                    <p class="card-text display-5">@Model.TotalFeedbacks</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total de Turmas</h5>
                    <p class="card-text display-5">@Model.TotalTurmas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total de Disciplinas</h5>
                    <p class="card-text display-5">@Model.TotalDisciplinas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total de Professores</h5>
                    <p class="card-text display-5">@Model.TotalProfessores</p>
                </div>
            </div>
        </div>
    </div>
</div>
