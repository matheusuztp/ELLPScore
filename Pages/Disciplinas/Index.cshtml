@page
@model Disciplinas.IndexModel
@{
    ViewData["Title"] = "Lista de Disciplinas";
    Layout = "~/Pages/Shared/_LayoutLogado.cshtml"; // Apontando para o layout com o sidebar
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Disciplinas Cadastrados</h2>
        <button class="btn btn-primary" id="btnCadastrarDisciplina">Cadastrar Disciplina</button>
    </div>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var disciplina in Model.Disciplinas)
            {
                <tr>
                    <td>@disciplina.Nome</td>
                    <td>
                        <!-- Botões para editar ou excluir Disciplina -->
                        <button class="btn btn-sm btn-warning">Editar</button>
                        <button class="btn btn-sm btn-danger">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="cadastrarDisciplinaModal" tabindex="-1" role="dialog" aria-labelledby="cadastrarDisciplinaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cadastrarDisciplinaModalLabel">Cadastrar Disciplina</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="formCadastrarDisciplina">
                    <!-- Partial View será carregada aqui -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            $("#btnCadastrarDisciplina").click(function(){
                $.get("@Url.Page("Index", "CadastrarDisciplinaPartial")", function(data){
                    $("#formCadastrarDisciplina").html(data);
                    $("#cadastrarDisciplinaModal").modal("show");
                });
            });
        });
    </script>
}