@page
@model CadastrarDisciplina.IndexModel
@{
    ViewData["Title"] = Model.DisciplinaInput.Id > 0 ? "Editar Disciplina" : "Cadastrar Disciplina";
    Layout = "~/Pages/Shared/_LayoutLogado.cshtml";
}


<head>
    <link rel="stylesheet" href="~/css/cad-temas.css" />
</head>

<div class="centered-form-container">
    <div class="centered-form-card">
        <h3 class="text-center">@ViewData["Title"]</h3>
        <form method="post">
            <input type="hidden" asp-for="DisciplinaInput.Id" />
            <div class="mb-3">
                <label asp-for="DisciplinaInput.Nome" class="form-label"></label>
                <input asp-for="DisciplinaInput.Nome" class="form-control" />
                <span asp-validation-for="DisciplinaInput.Nome" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex justify-content-between">
                <a href="/Disciplinas" class="btn btn-secondary" style="width: 15%; padding: 10px;"> <i class="fas fa-arrow-circle-left"></i> Voltar </a>
                <button type="submit" class="btn btn-primary"> <i class="fas fa-save"></i> Salvar</button>
            </div>
        </form>
    </div>
</div>


