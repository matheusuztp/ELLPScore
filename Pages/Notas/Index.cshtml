@page
@model Notas.IndexModel
@{
    ViewData["Title"] = "Registrar Notas";
    Layout = "~/Pages/Shared/_LayoutLogado.cshtml";
}

<div class="container">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <form id="notaForm" method="post" style="padding: 0 30vh;">
        <div class="row">
            <div class="col-md-4">
                <label>Turma:</label>
                <select name="TurmaID" class="form-control">
                    @foreach (var turma in Model.Turmas)
                    {
                        <option value="@turma.Value">@turma.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label>Serie:</label>
                <input type="text" name="Serie" class="form-control" value="@Model.Serie" readonly />
            </div>
            <div class="col-md-4">
                <label>Aluno:</label>
                <select name="AlunoID" id="alunoSelect" class="form-control">
                    @foreach (var aluno in Model.Alunos)
                    {
                        var isSelected = aluno.Value == Model.AlunoSelecionadoId.ToString() ? "selected" : "";
                        <option value="@aluno.Value" isSelected>@aluno.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label>Matéria:</label>
                <select name="DisciplinaID" class="form-control">
                    @foreach (var disciplina in Model.Disciplinas)
                    {
                        <option value="@disciplina.Value">@disciplina.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label>Período:</label>
                <input type="text" name="Periodo" class="form-control" />
            </div>
            <div class="col-md-2">
                <label for="ValorNota">Nota:</label>
                <input type="number" name="ValorNota" class="form-control" step="0.01" min="0" max="100" />
            </div>

            <div class="col-md-2" style="margin-top: auto; margin-inline: auto;">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>

        </div>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </form>

    <table class="table table-bordered mt-5" id="notasTable">
        <thead>
            <tr>
                <th>Turma</th>
                <th>Série</th>
                <th>Nome do Aluno</th>
                <th>Matéria</th>
                <th>Período</th>
                <th>Nota</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Notas != null && Model.Notas.Any())
            {
                foreach (var nota in Model.Notas)
                {
                    <tr>
                        <td>@nota.Turma.CodigoOuNome</td>
                        <td>@nota.Aluno.Serie</td>
                        <td>@nota.Aluno.Nome</td>
                        <td>@nota.Disciplina.Nome</td>
                        <td>@nota.Periodo</td>
                        <td>@nota.NotaValor</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Nenhuma nota encontrada</td>
                </tr>
            }
        </tbody>
    </table>
</div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#alunoSelect').on('change', function () {
                var alunoId = $(this).val();
                if (alunoId) {
                    $.ajax({
                        url: '/Notas/GetSeriePorAluno',
                        type: 'GET',
                        data: { alunoId: alunoId },
                        success: function (data) {
                            $('#serieInput').val(data);
                        },
                        error: function () {
                            alert('Erro ao buscar a série do aluno.');
                        }
                    });
                } else {
                    $('#serieInput').val('');
                }
            });
        });
    </script>
}