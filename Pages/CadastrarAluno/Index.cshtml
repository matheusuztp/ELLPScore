@page
@model CadastrarAluno.IndexModel
@{
    ViewData["Title"] = Model.AlunoInput.Id > 0 ? "Editar Aluno" : "Cadastrar Aluno";
    Layout = "~/Pages/Shared/_LayoutLogado.cshtml"; // Apontando para o layout com o sidebar
}

<head>
    <link rel="stylesheet" href="~/css/cad-alunos.css" />
</head>

<div class="centered-form-container">
    <div class="centered-form-card">
        <h3 class="text-center">@ViewData["Title"]</h3>
        <form method="post">

            <input type="hidden" asp-for="AlunoInput.Id" />
            <div class="row">
                <div class="form-group">
                    <label asp-for="AlunoInput.Nome"></label>
                    <input asp-for="AlunoInput.Nome" class="form-control" />
                    <span asp-validation-for="AlunoInput.Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label asp-for="AlunoInput.Email"></label>
                    <input asp-for="AlunoInput.Email" class="form-control" />
                    <span asp-validation-for="AlunoInput.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="AlunoInput.Serie"></label>
                        <input asp-for="AlunoInput.Serie" class="form-control" />
                        <span asp-validation-for="AlunoInput.Serie" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="AlunoInput.CPF"></label>
                        <input asp-for="AlunoInput.CPF" class="form-control" />
                        <span asp-validation-for="AlunoInput.CPF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="AlunoInput.Idade"></label>
                        <input asp-for="AlunoInput.Idade" class="form-control" />
                        <span asp-validation-for="AlunoInput.Idade" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="AlunoInput.Matricula"></label>
                        <select asp-for="AlunoInput.TurmaId" class="form-control" asp-items="@((SelectList)ViewData["Dados"])">
                        </select>
                        <span asp-validation-for="AlunoInput.TurmaId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="AlunoInput.Matricula"></label>
                        <input asp-for="AlunoInput.Matricula" class="form-control" />
                        <span asp-validation-for="AlunoInput.Matricula" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AlunoInput.Anotacoes"></label>
                <textarea asp-for="AlunoInput.Anotacoes" class="form-control"></textarea>
                <span asp-validation-for="AlunoInput.Anotacoes" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex justify-content-between">
                <a href="/Alunos" class="btn btn-secondary" style="width: 15%; padding:10px;"> <i class="fas fa-arrow-circle-left"></i> Voltar </a>
                <button type="submit" class="btn btn-primary"> <i class="fas fa-save"></i> Salvar</button>
            </div>
        </form>
    </div>
</div>



