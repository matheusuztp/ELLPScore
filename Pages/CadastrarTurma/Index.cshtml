@page
@model CadastrarTurma.IndexModel
@{
    ViewData["Title"] = Model.TurmaInput.TurmaID > 0 ? "Editar Turma" : "Cadastrar Turma";
    Layout = "~/Pages/Shared/_LayoutLogado.cshtml"; // Apontando para o layout com o sidebar
}


<head>
    <link rel="stylesheet" href="~/css/cad-temas.css" />
</head>

<div class="centered-form-container">
    <div class="centered-form-card">
        <h3 class="text-center">@ViewData["Title"]</h3>
        <form method="post">
            <input type="hidden" asp-for="TurmaInput.TurmaID" />
            <div class="mb-3">
                <label asp-for="TurmaInput.CodigoOuNome" class="form-label"></label>
                <input asp-for="TurmaInput.CodigoOuNome" class="form-control" />
                <span asp-validation-for="TurmaInput.CodigoOuNome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TurmaInput.ProfessorID" class="form-label">Professor</label>
                <select asp-for="TurmaInput.ProfessorID" class="form-control" asp-items="@((SelectList)ViewData["Professores"])">
                </select>
                <span asp-validation-for="TurmaInput.ProfessorID" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex justify-content-between">
                <a href="/Turmas" class="btn btn-secondary" style="width: 15%; padding: 10px;"> <i class="fas fa-arrow-circle-left"></i> Voltar </a>
                <button type="submit" class="btn btn-primary"> <i class="fas fa-save"></i> Salvar</button>
            </div>
        </form>
    </div>
</div>


